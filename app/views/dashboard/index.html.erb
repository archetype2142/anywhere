                            <span class="inline-flex items-center px-2 py-0.5 rounded-full text-xs font-medium <%= badge_color %> mr-1 mb-1">
                              <%= child.merchant&.name&.truncate(15) || 'Gym' %>
                              <span class="ml-1 text-xs">$<%= number_with_precision(child.amount, precision: 2) %></span>
                            </span>
                            <% if index < order.child_orders.size - 1 %>
                              <span class="mx-0.5 text-gray-400">+</span>
                            <% end %>
                          <% end %>
                        </div>
                      <% end %>
                    </div>
                  </div>
                </td>
                
                <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                  <div><%= order.merchant&.name || 'Unknown' %></div>
                  <% if order.merchant&.business_type.present? && order.merchant&.business_type != 'unknown' %>
                    <div class="text-xs text-gray-500 mt-1">
                      <%= order.merchant&.business_type&.humanize %>
                    </div>
                  <% end %>
                </td>
                
                <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                  <%= link_to "$ #{number_with_precision(order.amount, precision: 2)}",  "https://dashboard.stripe.com/test/payments/#{order.transaction_id}", class: "text-indigo-600 hover:text-indigo-900"%>
                </td>
                
                <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">$<%= number_with_precision(order.commission_amount, precision: 2) %></td>
                
                <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                  <% if order.stripe_transfer_id.present? %>
                    <%= link_to "$ #{number_with_precision(order.payout_amount, precision: 2)}",  "https://dashboard.stripe.com/test/payments/#{order.stripe_transfer_id}", class: "text-indigo-600 hover:text-indigo-900"%>
                  <% else %>
                    $<%= number_with_precision(order.payout_amount, precision: 2) %>
                  <% end %>
                </td>
                
                <td class="px-6 py-4 whitespace-nowrap">
                  <% status_color = case order.status
                                    when 'pending'
                                      'bg-yellow-100 text-yellow-800'
                                    when 'processing'
                                      'bg-blue-100 text-blue-800'
                                    when 'paid'
                                      'bg-green-100 text-green-800'
                                    when 'failed'
                                      'bg-red-100 text-red-800'
                                    when 'canceled'
                                      'bg-gray-100 text-gray-800'
                                    else
                                      'bg-gray-100 text-gray-800'
                                    end %>
                  <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium <%= status_color %>">
                    <%= order.status&.humanize %>
                  </span>
                </td>
                
                <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500"><%= order.created_at.strftime("%Y-%m-%d %H:%M") %></td>
                
                <td class="px-6 py-4 whitespace-nowrap text-sm font-medium">
                  <% if order.status == 'failed' %>
                    <%= button_to "Retry", retry_failed_order_path(order), method: :post, class: "inline-flex items-center px-2.5 py-1.5 border border-transparent text-xs font-medium rounded text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500" %>
                  <% end %>
                </td>
              </tr>
              
              <% # Child orders (hidden by default) %>
