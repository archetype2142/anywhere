                      <%= merchant.name %>
                      <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 inline" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14" />
                      </svg>
                    </a>
                  </td>
                  <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500"><%= merchant.marketplace_user_id %></td>
                  <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                    <% if merchant.stripe_account_id.present? %>
                      <div class="flex items-center">
                        <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-green-100 text-green-800 mr-2">
                          Connected
                        </span>
                        <a href="https://dashboard.stripe.com/connect/accounts/<%= merchant.stripe_account_id %>" target="_blank" class="text-gray-600 hover:text-gray-900">
                          <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 10h18M7 15h1m4 0h1m-7 4h12a3 3 0 003-3V8a3 3 0 00-3-3H6a3 3 0 00-3 3v8a3 3 0 003 3z" />
                          </svg>
                        </a>
                      </div>
                    <% else %>
                      <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-red-100 text-red-800">
                        Not Connected
                      </span>
                    <% end %>
                  </td>
                  <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500"><%= merchant.created_at.strftime("%Y-%m-%d %H:%M") %></td>
                  <td class="px-6 py-4 whitespace-nowrap text-sm font-medium">
                    <%= button_to "Refresh", refresh_merchant_stripe_account_path(merchant), method: :post, class: "inline-flex items-center px-2.5 py-1.5 border border-transparent text-xs font-medium rounded text-white bg-purple-600 hover:bg-purple-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-purple-500" %>
                  </td>
                </tr>
              <% end %>
              <% if @merchants.empty? %>
                <tr>
                  <td colspan="5" class="px-6 py-4 whitespace-nowrap text-sm text-gray-500 text-center">No merchants found</td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
        <div class="px-4 py-3 flex items-center justify-between border-t border-gray-200 sm:px-6">
          <div class="flex-1 flex justify-between sm:hidden">
            <%= link_to_prev_page @merchants, 'Previous', class: 'relative inline-flex items-center px-4 py-2 border border-gray-300 text-sm font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50' %>
            <%= link_to_next_page @merchants, 'Next', class: 'ml-3 relative inline-flex items-center px-4 py-2 border border-gray-300 text-sm font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50' %>
          </div>
          <div class="hidden sm:flex-1 sm:flex sm:items-center sm:justify-between">
            <div>
              <p class="text-sm text-gray-700">
                Showing <span class="font-medium"><%= @merchants.offset_value + 1 %></span> to <span class="font-medium"><%= @merchants.offset_value + @merchants.length %></span> of <span class="font-medium"><%= @merchants.total_count %></span> merchants
              </p>
            </div>
            <div>
              <%= paginate @merchants, window: 2 %>
            </div>
          </div>
        </div>
      </div>
    </div>

    <!-- Pending Charges -->
    <div class="bg-white shadow overflow-hidden sm:rounded-lg">
      <div class="px-4 py-5 sm:px-6 flex justify-between items-center">
        <div>
          <h3 class="text-lg leading-6 font-medium text-gray-900">Pending Charges</h3>
          <p class="mt-1 max-w-2xl text-sm text-gray-500">Charges waiting to be processed.</p>
        </div>
        <span class="inline-flex items-center px-3 py-0.5 rounded-full text-sm font-medium bg-orange-100 text-orange-800">
          Total: <%= @total_pending_charges %>
        </span>
      </div>
      <div class="border-t border-gray-200">
        <div class="overflow-x-auto">
          <table class="min-w-full divide-y divide-gray-200">
            <thead class="bg-gray-50">
              <tr>
                <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Charge ID</th>
                <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Amount</th>
                <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Currency</th>
                <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Job ID</th>
                <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Created</th>
                <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Actions</th>
              </tr>
            </thead>
            <tbody class="bg-white divide-y divide-gray-200">
              <% @pending_charges.each do |charge| %>
                <% metadata = JSON.parse(charge.metadata) rescue {} %>
                <tr>
                  <td class="px-6 py-4 whitespace-nowrap text-sm font-medium text-gray-900"><%= charge.charge_id %></td>
                  <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">$<%= number_with_precision(charge.amount, precision: 2) %></td>
                  <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500"><%= charge.currency.upcase %></td>
                  <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500"><%= metadata['job_id'] %></td>
                  <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500"><%= charge.created_at.strftime("%Y-%m-%d %H:%M") %></td>
                  <td class="px-6 py-4 whitespace-nowrap text-sm font-medium">
                    <%= button_to "Process", process_pending_charge_path(charge), method: :post, class: "inline-flex items-center px-2.5 py-1.5 border border-transparent text-xs font-medium rounded text-white bg-green-600 hover:bg-green-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-green-500" %>
                  </td>
                </tr>
              <% end %>
              <% if @pending_charges.empty? %>
                <tr>
                  <td colspan="6" class="px-6 py-4 whitespace-nowrap text-sm text-gray-500 text-center">No pending charges found</td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
        <div class="px-4 py-3 flex items-center justify-between border-t border-gray-200 sm:px-6">
          <div class="flex-1 flex justify-between sm:hidden">
            <%= link_to_prev_page @pending_charges, 'Previous', class: 'relative inline-flex items-center px-4 py-2 border border-gray-300 text-sm font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50' %>
            <%= link_to_next_page @pending_charges, 'Next', class: 'ml-3 relative inline-flex items-center px-4 py-2 border border-gray-300 text-sm font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50' %>
          </div>
          <div class="hidden sm:flex-1 sm:flex sm:items-center sm:justify-between">
            <div>
              <p class="text-sm text-gray-700">
                Showing <span class="font-medium"><%= @pending_charges.offset_value + 1 %></span> to <span class="font-medium"><%= @pending_charges.offset_value + @pending_charges.length %></span> of <span class="font-medium"><%= @pending_charges.total_count %></span> pending charges
              </p>
            </div>
            <div>
              <%= paginate @pending_charges, window: 2 %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- Order Status Distribution -->
  <div class="bg-white shadow overflow-hidden sm:rounded-lg">
    <div class="px-4 py-5 sm:px-6">
      <h3 class="text-lg leading-6 font-medium text-gray-900">Order Status Distribution</h3>
      <p class="mt-1 max-w-2xl text-sm text-gray-500">Overview of orders by status.</p>
    </div>
    <div class="border-t border-gray-200 p-6">
      <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
        <% @orders_by_status.each do |status, count| %>
          <% status_color = case status
                           when 'pending' then 'bg-yellow-100 text-yellow-800'
                           when 'paid' then 'bg-green-100 text-green-800'
                           when 'failed' then 'bg-red-100 text-red-800'
                           else 'bg-gray-100 text-gray-800'
                           end %>
          <div class="bg-white overflow-hidden shadow rounded-lg border">
            <div class="px-4 py-5 sm:p-6">
              <div class="flex items-center">
                <div class="w-0 flex-1">
                  <dl>
                    <dt class="text-sm font-medium text-gray-500 truncate"><%= status.humanize %> Orders</dt>
                    <dd class="mt-1 text-3xl font-semibold text-gray-900"><%= count %></dd>
                  </dl>
                </div>
                <div>
                  <span class="inline-flex items-center px-3 py-0.5 rounded-full text-sm font-medium <%= status_color %>">
                    <%= ((count.to_f / @total_orders) * 100).round %>%
                  </span>
                </div>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
  <%= render 'database_maintenance' %>
</div>
